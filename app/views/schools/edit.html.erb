<div class="top-wrapper">
  <div class="container">
    <%= form_with model: @current_school, url: school_path, class: "school-form", local: true do |f| %>
      <div class="form-group">
        <div class="label">学校名</div>
        <%= f.text_field :school_name, class: "form" %>
      </div>
      <div class="form-group">
        <div class="label">メールアドレス</div>
        <%= f.text_field :email, class: "form" %>
      </div>
      <div class="form-group">
        <div class="label">教員用パスワード</div>
        <%= f.text_field :teacher_password, class: "form" %>
      </div>
      <div class="form-group">
        <div class="label">生徒用パスワード</div>
        <%= f.text_field :student_password, class: "form" %>
      </div>
      <div class="form-group">
        <div class="label">新しいパスワード</div>
        <%= f.text_field :password, class: "form" %>
      </div>
      <div class="form-group">
        <div class="label">新しいパスワード(確認)</div>
        <%= f.text_field :password_confirmation, class: "form" %>
      </div>
      <%= f.submit 'Edit School', class: "submit-btn" %>
    <% end %>
  </div>
</div>