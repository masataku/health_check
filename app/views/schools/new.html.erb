<div class="top-wrapper">
  <div class="container">
    <%= form_with model: @school, url: schools_path, class: "school-form", local: true do |f| %>
      <div class="form-group">
        <div class="label">学校名</div>
        <%= f.text_field :school_name, class: "form" %>
      </div>
      <div class="form-group">
        <div class="label">メールアドレス</div>
        <%= f.text_field :email, class: "form" %>
      </div>
      <div class="form-group">
        <div class="label">パスワード</div>
        <%= f.password_field :password, class: "form" %>
      </div>
      <div class="form-group">
        <div class="label">パスワード(確認)</div>
        <%= f.password_field :password_confirmation, class: "form" %>
      </div>
      <div class="form-group">
        <div class="label">教員用パスワード</div>
        <%= f.text_field :teacher_password, class: "form" %>
      </div>
      <div class="form-group">
        <div class="label">生徒用パスワード</div>
        <%= f.text_field :student_password, class: "form" %>
      </div>
      <%= f.submit 'Create Shool', class: "submit-btn" %>
    <% end %>
  </div>
</div>