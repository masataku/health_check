<!DOCTYPE html>
<html>
  <head>
    <title>HealthCheck</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <div class="heading">
        <span><%= link_to "HealthySchool", root_path %></span>
      </div>
      <div class="header-nav">  
        <ul class="header-lists">
          <li class="header-list">
            <%= link_to "使い方ガイド", "#" %>
          </li>
          <li class="header-list">
            <%= link_to "設定する", "/schools/#{@school.id}/confirm" %>
          </li>
          <li class="header-list">
            <%= link_to "学校名", "#" %>
          </li>
        </ul>
      </div>        
    </header>
    <%= yield %>
    <footer>
      HealtySchool
    </footer>
  </body>
</html>
