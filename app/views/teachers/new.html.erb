<div class="top-wrapper">
  <div class="container">
    <%= form_with model: [@current_school, @teacher], url: school_teachers_path, local: true do |f| %>
      <div class="form-group">
        <div class="label">学年</div>
        <%= f.text_field :grade, class: "form", maxlength: 1 %>
      </div>
      <div class="form-group">
        <div class="label">クラス</div>
        <%= f.text_field :my_class, class: "form", maxlength: 2 %>
      </div><div class="form-group">
        <div class="label">名前</div>
        <%= f.text_field :name, class: "form" %>
      </div>
      <div class="form-group">
        <div class="label">教員確認パスワード</div>
        <%= f.text_field :teacher_password, class: "form" %>
      </div>
      <%= f.submit '教員として入る', class: "submit-btn" %>
    <% end %>
  </div>
</div>