<div class="top-wrapper">
  <div class="container">
    <%= form_with model: [@school, @teacher], url: school_teachers_path, method: :get, local: true do |f| %>
      <div class="form-group">
        <div class="label">学年</div>
        <%= f.text_field :grade, class: "form" %>
      </div>
      <div class="form-group">
        <div class="label">クラス</div>
        <%= f.text_field :my_class, class: "form" %>
      </div><div class="form-group">
        <div class="label">名前</div>
        <%= f.password_field :name, class: "form" %>
      </div>
      <div class="form-group">
        <div class="label">教員確認パスワード</div>
        <%= f.password_field :teacher_password, class: "form" %>
      </div>
      <%= f.submit 'GoTo your Shool', class: "submit-btn" %>
    <% end %>
  </div>
</div>